<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="create_run_jar" name="GTNA runner">
	<target name="create_run_jar">
		<jar destfile="./deploy/gtna.jar" filesetmanifest="mergewithoutmain">
				<manifest>
					 <attribute name="Main-Class" value="gtna.GTNA"/>
					 <attribute name="Class-Path" value="."/>
				</manifest>
				<fileset dir="./bin"/>
				<zipfileset excludes="META-INF/*.SF" src="./lib/commons-math-2.0.jar"/>
				<zipfileset excludes="META-INF/*.SF" src="./lib/log4j-1.2.16.jar"/>
		  </jar>
	 </target>
</project>

